<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.buchuanqiuku.demo.news.fragment.NewsFragment">


    <HorizontalScrollView
        android:id="@+id/horizon_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/xinwen_rg"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_xinwen_1"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="热点"
                    android:textColor="@drawable/rb_text_color" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_xinwen_2"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="头条"
                    android:textColor="@drawable/rb_text_color" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_xinwen_3"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="娱乐"
                    android:textColor="@drawable/rb_text_color" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_xinwen_4"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="体育"
                    android:textColor="@drawable/rb_text_color" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_xinwen_5"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="财经"
                    android:textColor="@drawable/rb_text_color" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_xinwen_6"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="科技"
                    android:textColor="@drawable/rb_text_color" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_xinwen_7"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="汽车"
                    android:textColor="@drawable/rb_text_color" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_xinwen_8"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="时尚"
                    android:textColor="@drawable/rb_text_color" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_xinwen_9"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="军事"
                    android:textColor="@drawable/rb_text_color" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_xinwen_10"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="历史"
                    android:textColor="@drawable/rb_text_color" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_xinwen_11"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="彩票"
                    android:textColor="@drawable/rb_text_color" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_xinwen_12"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="游戏"
                    android:textColor="@drawable/rb_text_color" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_xinwen_13"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="影视"
                    android:textColor="@drawable/rb_text_color" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_xinwen_14"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="论坛"
                    android:textColor="@drawable/rb_text_color" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/rb_xinwen_15"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:button="@null"
                    android:gravity="center"
                    android:text="社会"
                    android:textColor="@drawable/rb_text_color" />
            </RadioGroup>


            <TextView
                android:id="@+id/top_tv"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#ff3f7f" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ff3f7f" />
        </LinearLayout>
    </HorizontalScrollView>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>


</LinearLayout>
